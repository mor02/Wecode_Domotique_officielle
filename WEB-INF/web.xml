<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<context-param>
		<param-name>urlapplication</param-name>
		<param-value>http://localhost:8080/MyEasyHome/</param-value>
	</context-param>

	<!-- Ã©couteurs -->
	<listener>
		<listener-class>myeasyhome.boiteoutils.InitialisationContext</listener-class>
	</listener>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc_myeasyhome</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<servlet>
		<servlet-class>myeasyhome.Controlers.ControleurUtilisateur</servlet-class>
		<servlet-name>user</servlet-name>
	</servlet>
		<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>*.user</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-class>myeasyhome.Controlers.Piece</servlet-class>
		<servlet-name>Piece</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>Piece</servlet-name>
		<url-pattern>*.Piece</url-pattern>
	</servlet-mapping>

<servlet>
		<servlet-class>myeasyhome.Controlers.ControleurEtage</servlet-class>
		<servlet-name>ControleurEtage</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControleurEtage</servlet-name>
		<url-pattern>*.ControleurEtage</url-pattern>
	</servlet-mapping>
<servlet> 
		<servlet-class>myeasyhome.Controlers.ControleurMaison</servlet-class>
		<servlet-name>ControleurMaison</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControleurMaison</servlet-name>
		<url-pattern>*.ControleurMaison</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jspf</url-pattern>
		</jsp-property-group>
	</jsp-config>

	<welcome-file-list>
		<welcome-file>vues/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<context-param>
		<param-name>urlapplication</param-name>
		<param-value>http://localhost:8080/myeasyhome/</param-value>
	</context-param>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc_myeasyhome</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<servlet>
		<servlet-class>package myeasyhome.Controlers.Login</servlet-class>
		<servlet-name>Login</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>*.Login</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jspf</url-pattern>
		</jsp-property-group>
	</jsp-config>

	<welcome-file-list>
		<welcome-file>vues/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>